<?xml version="1.0" encoding="utf-8"?>
<!--suppress AndroidDomInspection -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/library_book"
        android:layout_width="match_parent"
        android:layout_height="@dimen/book_height"
        android:layout_marginTop="@dimen/book_marginTop"
        android:layout_marginBottom="@dimen/book_marginBottom"
        android:layout_marginRight="@dimen/book_marginLR"
        android:layout_marginLeft="@dimen/book_marginLR"
        android:background="@drawable/textview_style"
        android:textSize="@dimen/bookName_size"
        android:textColor="@color/colorBookName"
        android:gravity="center_vertical|start"
        android:drawableStart="@drawable/ic_point"
        android:drawablePadding="@dimen/image_text_padding"
        android:paddingStart="@dimen/book_imagePadding"
        android:paddingEnd="@dimen/book_imagePadding"/>

</LinearLayout>
