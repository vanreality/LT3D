<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/library_model"
        android:layout_width="match_parent"
        android:layout_height="@dimen/book_height"
        android:layout_marginTop="@dimen/book_marginTop"
        android:layout_marginBottom="@dimen/book_marginBottom"
        android:layout_marginRight="@dimen/book_marginLR"
        android:layout_marginLeft="@dimen/book_marginLR"
        android:background="@drawable/textview_style"
        android:textSize="@dimen/bookName_size"
        android:textColor="@color/colorBookName"
        android:gravity="center_vertical|start"
        android:drawableStart="@drawable/modle"
        android:paddingStart="25dp"
        android:paddingEnd="25dp"
        android:drawablePadding="15dp"/>


</LinearLayout>